<beans 
	default-lazy-init="false" 
	xmlns="http://www.springframework.org/schema/beans" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:batch="http://www.springframework.org/schema/batch"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
		http://www.springframework.org/schema/batch 
		http://www.springframework.org/schema/batch/spring-batch.xsd">
	
	<batch:job id="importFileIntoDB">
		<batch:step id="step-1">
			<batch:tasklet>
				<batch:chunk reader="productReader" writer="productWriter" commit-interval="5" />
			</batch:tasklet>
		</batch:step>
	</batch:job>
	
	<bean id="productReader" class="org.springframework.batch.item.file.FlatFileItemReader" scope="step">
		<property name="resoruce" value="file:#{jobParameters['inputFile']}"></property>
		<property name="linesToSkip" value="1"></property>
		<property name="lineMapper">
			<bean class="org.springframework.batch.item.file.mapping.DefaultLineMapper">
				<property name="tokenizer">
					<bean class="org.springframework.batch.item.file.transform.DelimitedLineTokenizer">
						<property name="names" value="id,name,description,quantity"></property>
					</bean>
				</property>
				<property name="fieldSetMapper">
					<bean class="org.webank.working.springbatch.reader.ProductFiledSetMapper" />
				</property>
			</bean>
		</property>
	</bean>
	
	<bean id="productWriter" class="org.webank.working.springbatch.writer.ProductItemWriter" />
</beans>